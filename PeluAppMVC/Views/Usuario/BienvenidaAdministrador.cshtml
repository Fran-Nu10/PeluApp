@{
    ViewData["Title"] = "Bienvenido Administrador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #F8BBD0; /* Rosa pastel */
            color: #4A4A4A; /* Gris oscuro */
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            padding: 50px;
        }

        .header {
            background-color: #E1C6E6; /* Lavanda suave */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 3rem;
            color: #4A4A4A; /* Gris oscuro */
        }

        .message {
            font-size: 1.5rem;
            margin-top: 20px;
            color: #4A4A4A;
        }

        .button {
            background-color: #A8E6CF; /* Verde menta */
            color: #fff;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 30px;
            font-size: 1rem;
        }

            .button:hover {
                background-color: #81C7A6; /* Un verde menta más oscuro */
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="header">
            <h1>Bienvenido al Panel de Administración</h1>
        </div>

        <p class="message">Hola, Administrador. Gracias por gestionar nuestra peluquería. Aquí podrás administrar los clientes, empleados, citas y mucho más.</p>

        <button class="button" onclick="window.location.href='/Administradores/GestionClientes'">Gestionar Clientes</button>
        <button class="button" onclick="window.location.href='/Administradores/GestionEmpleados'">Gestionar Empleados</button>
        <button class="button" onclick="window.location.href='/Administradores/GestionCitas'">Gestionar Citas</button>
    </div>

</body>
</html>

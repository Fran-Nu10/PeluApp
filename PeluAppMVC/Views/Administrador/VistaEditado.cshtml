@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cliente Editado</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #2C2C2C; /* Fondo oscuro */
            color: #F5F5F5; /* Texto claro */
            margin: 0;
            padding: 0;
        }

        nav {
            background-color: #3A3A3A;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .nav-left {
            font-size: 1.5rem;
            font-weight: bold;
            color: #F5F5F5;
        }

        .container {
            text-align: center;
            padding: 30px;
            background-color: #3A3A3A;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            margin: 50px auto;
        }

        h1 {
            font-size: 2rem;
            color: #4CAF50; /* Verde */
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .button {
            background-color: #4CAF50; /* Verde */
            color: #fff;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
            display: inline-block;
        }

            .button:hover {
                background-color: #45A049; /* Verde más claro */
            }
    </style>
</head>
<body>

    <nav>
        <div class="nav-left">PeluAppMVC</div>
    </nav>

    <div class="container">
        <h1>Cliente Editado</h1>
        <p>El cliente ha sido editado exitosamente.</p>
        <a class="button" href="@Url.Action("TodosLosClientes")">Volver a los Clientes</a>
    </div>

</body>
</html>
